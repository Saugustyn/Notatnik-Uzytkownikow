@model IEnumerable<Person>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista Użytkowników</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Person" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-dotted"></i> &nbsp; Dodaj Użytkownika
            </a>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Imię
                </th>
                <th>
                    Nazwisko
                </th>
                <th>
                    Data Urodzenia
                </th>
                <th>
                    Płeć
                </th>
                <th>
                    Stanowisko
                </th>
                <th>
                    Numer Telefonu
                </th>
                <th>
                    Wzrost
                </th>
                <th>
                    Rozmiar Buta
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td widh="50%">
                        @obj.FirstName
                    </td>
                    <td widh="50%">
                        @obj.LastName
                    </td>
                    <td widh="50%">
                        @obj.DateOfBirth
                    </td>
                    <td widh="50%">
                        @obj.Gender
                    </td>
                    <td widh="50%">
                        @obj.Position
                    </td>
                    <td widh="50%">
                        @obj.PhoneNumber
                    </td>
                    <td widh="50%">
                        @obj.Height
                    </td>
                    <td widh="50%">
                        @obj.ShoeSize
                    </td>
                    <td>
                        <div class="w-75 btn-group role=group">
                            <a asp-controller="Person" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="Person" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>